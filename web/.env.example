# JWT signing secret (generate with: openssl rand -hex 32)
NUXT_JWT_SECRET=

# Admin dashboard key (generate with: openssl rand -hex 32)
NUXT_ADMIN_KEY=

# Database path (default: ./data/shoulders.db)
NUXT_DATABASE_PATH=./data/shoulders.db

# AI provider API keys (server-side, used by proxy)
NUXT_ANTHROPIC_API_KEY=
NUXT_OPENAI_API_KEY=
NUXT_GOOGLE_API_KEY=

# Z OCR API key (PDF intake for peer review)
NUXT_Z_API_KEY=

# AI Tools API keys
NUXT_EXA_API_KEY=
NUXT_OPENALEX_API_KEY=

# Resend API key for transactional email (verification, password reset)
NUXT_RESEND_API_KEY=

# Public base URL (used in email links)
NUXT_BASE_URL=https://shoulde.rs

# GitHub repo for release downloads (owner/repo)
NUXT_GITHUB_REPO=user/shoulders

# GitHub OAuth App (for user GitHub sync)
# Register at: github.com → Settings → Developer settings → OAuth Apps
# Callback URL: {BASE_URL}/api/v1/auth/github/callback
NUXT_GITHUB_CLIENT_ID=
NUXT_GITHUB_CLIENT_SECRET=

# Shoulders surcharge multiplier on raw API cost (default: 1.20 = 20%)
NUXT_SHOULDERS_SURCHARGE_MULTIPLIER=1.20

# Stripe (payments & subscriptions)
# Dashboard: https://dashboard.stripe.com/apikeys
NUXT_STRIPE_SECRET_KEY=
NUXT_STRIPE_WEBHOOK_SECRET=
NUXT_STRIPE_PRICE_ID=
